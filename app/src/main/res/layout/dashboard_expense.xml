<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:elevation="5dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipologia"
            android:gravity="center"
            android:textColor="@color/nav_header"
            android:id="@+id/type_expense_ds"
            android:textAppearance="?android:textAppearanceLarge">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="QuantitÃ "
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/expense_amount"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/amount_expense_ds">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 12 Maggio 2024"
            android:padding="5dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/expense_color"
            android:id="@+id/date_expense_ds">
        </TextView>

    </LinearLayout>

</androidx.cardview.widget.CardView>